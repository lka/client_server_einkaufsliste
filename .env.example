# JWT Secret Key - Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# JWT Token Expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database URL (optional, defaults to sqlite:///./data.db)
# DATABASE_URL=sqlite:///./data.db

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password
ADMIN_EMAIL=admin@example.com

# Cleanup Settings
# Time in hours after which the following data is automatically deleted:
# - Unapproved users (users who never got approved by an admin)
# - Shopping list items (items with shopping_date older than this threshold)
UNAPPROVED_USER_EXPIRY_HOURS=48

# Shopping Day Configuration
# Main shopping day (used as default in shopping list date picker)
# Values: 0=Monday, 1=Tuesday, 2=Wednesday, 3=Thursday, 4=Friday, 5=Saturday, 6=Sunday
MAIN_SHOPPING_DAY=2

# Fresh products shopping day (can be used by server for special logic)
# Values: 0=Monday, 1=Tuesday, 2=Wednesday, 3=Thursday, 4=Friday, 5=Saturday, 6=Sunday
FRESH_PRODUCTS_DAY=4
