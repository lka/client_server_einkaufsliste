# Environment variables for Docker deployment
# Copy this file to .env and adjust the values

# IMPORTANT: Generate a secure secret key for production!
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secure-secret-key-here

# JWT token expiration in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database URL (SQLite by default, persisted in ./data volume)
DATABASE_URL=sqlite:///./data/data.db

# Admin user credentials
# CHANGE THESE IN PRODUCTION!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-here
ADMIN_EMAIL=admin@example.com

# User approval settings
# Hours until unapproved users are automatically deleted
UNAPPROVED_USER_EXPIRY_HOURS=48

# Shopping Day Configuration
# Main shopping day (used as default in shopping list date picker)
# Values: 0=Monday, 1=Tuesday, 2=Wednesday, 3=Thursday, 4=Friday, 5=Saturday, 6=Sunday
MAIN_SHOPPING_DAY=2

# Fresh products shopping day (can be used by server for special logic)
# Values: 0=Monday, 1=Tuesday, 2=Wednesday, 3=Thursday, 4=Friday, 5=Saturday, 6=Sunday
FRESH_PRODUCTS_DAY=4